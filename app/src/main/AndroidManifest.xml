<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pms.kirillbaranov.premierleague">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.FullScreen">

    <activity android:name="com.pms.kirillbaranov.premierleague.activity.BaseAppSideMenuActivity"
        android:screenOrientation="portrait" android:theme="@style/AppTheme.FullScreen">
    </activity>
        <activity android:name=".activity.TableLeagueActivity"
            android:screenOrientation="portrait" android:theme="@style/AppTheme.FullScreen" android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.pms.kirillbaranov.premierleague.activity.TeamsActivity"
            android:screenOrientation="portrait" android:theme="@style/AppTheme.FullScreen" android:launchMode="singleTop">
        </activity>
        <activity android:name="com.pms.kirillbaranov.premierleague.activity.FixturesActivity"
            android:screenOrientation="portrait" android:theme="@style/AppTheme.FullScreen" android:launchMode="singleTop">
        </activity>
        <activity android:name="com.pms.kirillbaranov.premierleague.activity.PlayersActivity"
            android:screenOrientation="portrait" android:theme="@style/AppTheme.FullScreen" android:launchMode="singleTop">
        </activity><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
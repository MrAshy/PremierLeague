<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/players_root_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="4dp"
    >

    <com.pms.kirillbaranov.premierleague.ui.TypeFaceTextView
        android:id="@+id/players_number_text_view"
        style="@style/WrapContent"
        android:minWidth="80dp"
        android:maxLines="1"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/small"
        android:gravity="center"
        android:text="#1"
        android:textColor="@color/black_opacity_87"
        android:textSize="40sp"
        app:typeFace="roboto_bold"
        />

    <LinearLayout
        android:id="@+id/basic_players_layout"
        style="@style/WrapContent"
        android:layout_toEndOf="@+id/players_number_text_view"
        android:orientation="vertical">

        <com.pms.kirillbaranov.premierleague.ui.TypeFaceTextView
            android:id="@+id/players_name_text_view"
            style="@style/WrapContent"
            android:minWidth="20dp"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/small"
            android:gravity="center"
            android:text="Eldin Jakupovic"
            android:textColor="@color/black_opacity_87"
            android:textSize="20sp"
            app:typeFace="roboto_bold"
            />

        <com.pms.kirillbaranov.premierleague.ui.TypeFaceTextView
            android:id="@+id/players_birthday_text_view"
            style="@style/WrapContent"
            android:minWidth="20dp"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/small"
            android:gravity="center"
            android:text="29 years"
            android:textColor="@color/black_opacity_87"
            android:textSize="15sp"
            app:typeFace="roboto_bold"
            />

        <com.pms.kirillbaranov.premierleague.ui.TypeFaceTextView
            android:id="@+id/players_position_text_view"
            style="@style/WrapContent"
            android:minWidth="20dp"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/small"
            android:gravity="center"
            android:text="Position: Centre Back"
            android:textColor="@color/grey_battleship"
            android:textSize="15sp"
            app:typeFace="roboto_bold"
            />

        <com.pms.kirillbaranov.premierleague.ui.TypeFaceTextView
            android:id="@+id/players_nationality_text_view"
            style="@style/WrapContent"
            android:minWidth="20dp"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/small"
            android:gravity="center"
            android:text="Nationality: England"
            android:textColor="@color/black_opacity_87"
            android:textSize="15sp"
            app:typeFace="roboto_bold"
            />
        <com.pms.kirillbaranov.premierleague.ui.TypeFaceTextView
            android:id="@+id/players_market_value_text_view"
            style="@style/WrapContent"
            android:minWidth="20dp"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/small"
            android:gravity="center"
            android:text="Market Value: 250,000 â‚¬"
            android:textColor="@color/red_ribbon"
            android:textSize="15sp"
            app:typeFace="roboto_bold"
            />



    </LinearLayout>

</RelativeLayout>